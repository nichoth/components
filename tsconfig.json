{
  "compilerOptions": {
    "listFiles": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM"],
    "allowJs": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "example/**/*",
    "src/**/*"
  ]
}
