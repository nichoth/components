{
  "name": "@nichoth/components",
  "description": "A template for *dependency* JS modules -- modules intended to be a dependency of application code.",
  "version": "0.0.3",
  "main": "src/index.mjs",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "vite",
    "lint": "standardx -v",
    "build": "mkdir -p dist && rm -rf dist/* && node ./build.mjs",
    "serve": "vite preview",
    "preversion": "check-deps . 4 && npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build",
    "test": "node ./test/test.js | tap-arc"
  },
  "exports": {
    "./*": {
      "import": "./dist/*",
      "require": "./dist/*"
    }
  },
  "dependencies": {
    "@preact/signals": "^1.1.2",
    "htm": "^3.1.1",
    "preact": "^10.11.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@nichoth/check-max-deps": "0.0.2",
    "@preact/preset-vite": "^2.5.0",
    "esbuild": "^0.15.11",
    "git-hooks-plus": "^1.0.1",
    "glob": "^8.0.3",
    "postcss-nesting": "^10.2.0",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1",
    "vite": "^4.0.3"
  },
  "standardx": {
    "ignore": [
      "public/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/components.git"
  },
  "keywords": [
    "components",
    "ui",
    "preact"
  ],
  "author": "nichoth <nichoth@gmail.com> (http://nichoth.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/components/issues"
  },
  "homepage": "https://github.com/nichoth/components#readme"
}
