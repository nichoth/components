{
  "name": "@nichoth/components",
  "type": "module",
  "description": "A collection of UI components",
  "version": "0.9.2",
  "main": "src/index.mjs",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "vite",
    "start-esm": "",
    "lint": "standardx src/**/*.{ts,tsx} -v",
    "build-cjs": "esbuild src/*.ts --format=cjs --tsconfig=tsconfig.build.json --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build": "mkdir -p dist && rm -rf ./dist/* && npm run build-preact && npm run build-htm && npm run build-tonic && npm run build-css",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && vite build --base=./",
    "build-preact": "esbuild src/preact/*.tsx --outdir=dist/preact --sourcemap --tsconfig=tsconfig.build.json",
    "build-htm": "esbuild src/htm/*.ts --outdir=dist/htm --sourcemap --tsconfig=tsconfig.build.json",
    "build-tonic": "esbuild src/tonic/*.js --outdir=dist/tonic --sourcemap",
    "build-css": "postcss src/*.css --use postcss-nesting --dir=dist",
    "serve": "vite preview",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build",
    "test": "node ./test/test.js | tap-arc"
  },
  "exports": {
    "./*": "./dist/*.js",
    "./*.css": "./dist/*.css",
    "./preact/*": "./dist/preact/*.js",
    "./tonic/*": "./dist/tonic/*.js",
    "./htm/*": "./dist/htm/*.js"
  },
  "dependencies": {
    "@nichoth/tonic": "^15.1.3",
    "@preact/signals": "^1.1.2",
    "clipboard-copy": "^4.0.1",
    "htm": "^3.1.1",
    "just-kebab-case": "^4.2.0",
    "preact": "^10.18.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@preact/preset-vite": "^2.5.0",
    "@socketsupply/tapzero": "^0.7.1",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "esbuild": "^0.15.18",
    "eslint": "^7.18.0",
    "eslint-config-preact": "^1.3.0",
    "git-hooks-plus": "^1.0.1",
    "glob": "^8.0.3",
    "jest": "^29.4.1",
    "mkdirp": "^2.1.3",
    "postcss-cli": "^10.1.0",
    "postcss-nesting": "^10.2.0",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1",
    "typescript": "^4.9.5",
    "vite": "^4.0.3"
  },
  "standardx": {
    "ignore": [
      "dist/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/components.git"
  },
  "keywords": [
    "components",
    "ui",
    "preact"
  ],
  "author": "nichoth <nichoth@gmail.com> (http://nichoth.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/components/issues"
  },
  "homepage": "https://github.com/nichoth/components#readme"
}
